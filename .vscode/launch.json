    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            // "justMyCode": false,
            "console": "integratedTerminal"
        },
        // {
        //     "name": "Python: Debug Tests",
        //     "type": "debugpy",
        //     "request": "launch",
        //     "program": "${file}",
        //     "purpose": [ "debug-test" ],
        //     "console": "integratedTerminal",
        //     "justMyCode": false
        // },
        {
            "name": "Python Debugger: Flask - local",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            // "justMyCode": false,
            "env": {
                "APP_SECRETS_DIR": "${workspaceFolder}/sandbox/secrets",
                "FLASK_APP": "backend/autoapp:app",
                "FLASK_DEBUG": "1"
            },
            "args": [ "run", "--no-debugger", "--no-reload" ]
        },
        {
            "name": "Python Debugger: Flask - docker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            // "justMyCode": false,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/srv"
                }
            ]
        }
    ]
}
